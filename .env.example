# ========= APP / SERVER ============================
# Frontend development server port
# Default: 5173 (Vite default port)
VITE_PORT=5173
# ====================================================

# ========= BACKEND API ==============================
# Backend API URL for frontend to connect to backend services
VITE_API_URL=your_api_url_here
# ====================================================

# ========= SOCKET CONNECTION ========================
# WebSocket/Socket.IO URL for real-time communication
VITE_SOCKET_URL=your_socket_url_here
# ====================================================

# ========= SECURITY / ENCRYPTION ====================
# JWT Secret key for token validation and encryption
# This should match the backend JWT_SECRET
# Required for authentication and response decryption
VITE_JWT_SECRET=your_jwt_secret_key
# ====================================================
